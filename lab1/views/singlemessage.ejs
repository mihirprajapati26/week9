
<!-- Define a function to render the message -->
<% function renderMessage(message) { %>
    <div class="item-details">
      <article>
        <h2>Sender: <%= message.sender %></h2>
        <h2>Recipient: <%= message.recipient %></h2>
        <p>
          <strong>Content:</strong> <%= message.content %>
        </p>
    
        <!-- Update button -->
        <form
          class="action-form"
          method="GET"
          action="/single-message/update/<%= message._id %>"
        >
          <button type="submit" class="update">update</button>
        </form>
    
        <!-- Delete button -->
        <form
          class="action-form"
          method="POST"
          action="/single-message/<%= message._id %>?_method=DELETE"
        >
          <button type="submit">delete</button>
        </form>
      </article>
    </div>
    <% } %>
  
  <!DOCTYPE html>
  <html lang="en">
    <!-- Pass a JavaScript variable to a partial in EJS -->
    <%- include('partials/head.ejs', { title: message.title }) %>
    <body>
      <%- include('partials/navbar.ejs') %>
      
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (message) { %> <%= renderMessage(message) %> <% } else { %>
            <p>No message found.</p>
            <% } %>
          </div>
        </div>
      </div>
  
      <%- include('partials/footer.ejs') %>
    </body>
  </html>
  